		"coveralls": "^3.0.2",
		"jest": "^23.6.0",
		"pre-commit": "^1.2.2",
		"ts-jest": "^23.10.5",
		"tslint": "^5.12.1",
		"typescript": "^3.1.6"
	},
	"dependencies": {
		"0x.js": "^3.0.2",
		"@0x/contract-addresses": "^2.2.1",
		"@0x/web3-wrapper": "^3.2.4",
